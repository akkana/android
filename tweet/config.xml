<?xml version='1.0' encoding='utf-8'?>
<widget id="com.shallowsky" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Tweet</name>
    <description>
        Play Birdsongs
    </description>
    <author email="akkana@shallowsky.com" href="http://shallowsky.com/">
        Akkana Peck
    </author>
    <content src="index.html" />
    <icon src="res/android/ldpi.png" density="ldpi" />
    <icon src="res/android/mdpi.png" density="mdpi" />
    <icon src="res/android/hdpi.png" density="hdpi" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="file://*/*" />
